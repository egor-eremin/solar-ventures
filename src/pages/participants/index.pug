extends ../../pug/base

append vars
	- baseDir = '../'
	- title = "Участники программы CYBЕRSTAGE"
	- meta.description = "Участники программы CYBЕRSTAGE"
	- body.classList = "page__body-second"
	- link.icon = `${baseDir}favicons/favicon.ico`
	- link.iconSvg = `${baseDir}favicons/favicon.svg`
	- link.appleTouchIcon = `${baseDir}favicons/180.png`
	- link.manifest = `${baseDir}favicons/site.webmanifest`
	- link.canonical = "https://cyberstage.rt-solar.ru/participants/"
	- currentPage = "participants"

block body-start
	header.page-header
		+header-second
		include ../../pug/pages/participants/promo
block content
	include ../../pug/pages/participants/logo-main
	include ../../pug/blocks/consultation-form
	include ../../pug/blocks/success-form

block footer
	include ../../pug/blocks/footer-second

