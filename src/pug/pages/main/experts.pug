							| <svg class="circle-animate__svg circle-animate__svg_1"
							|   xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox='0 0 20 20'>
							|   <defs>
							|     <mask id="mask-experts-1">
							|        <circle cx="10" cy="10" r="11" fill="white" />
							|        <ellipse class="circle-animate__circle-mask-1" cx="10" cy="10" rx="10" ry="10" fill="black" />
							|     </mask>
							|   </defs>
							|   <ellipse class="circle-animate__circle-svg-1 circle-animate__circle-orange" cx="10" cy="10" rx="9" ry="9" mask="url(#mask-experts-1)" />
							| </svg>
						.circle-animate__elem.circle-animate__elem2
							| <svg class="circle-animate__svg circle-animate__svg_2"
							|   xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox='0 0 20 20'>
							|   <defs>
							|     <mask id="mask-experts-2">
