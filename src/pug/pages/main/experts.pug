							|        <ellipse class="circle-animate__circle-mask-2" cx="10" cy="10" rx="0" ry="10" fill="black" />
							|     </mask>
							|   </defs>
							|   <ellipse class="circle-animate__circle-svg-2 circle-animate__circle-orange" cx="10" cy="10" rx="9" ry="9" mask="url(#mask-experts-2)" />
